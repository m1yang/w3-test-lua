{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "type": "shell",
  "windows": {
    "options": {
      "shell": {
        "executable": "powershell.exe",
        "args": [
          "-NoProfile",
          "-Command",
          "[Console]::OutputEncoding = [System.Text.Encoding]::UTF8;"
        ]
      }
    }
  },
  "tasks": [
    {
      "label": "运行",
      "command": "${workspaceRoot}/tools/we.bat",
      "presentation": {
        "close": true
      },
      "args": ["run", "-launchwar3", "-loadfile", "${workspaceRoot}/ObjMap.w3x"]
    },
    {
      "label": "配置",
      "command": "${workspaceRoot}/tools/we.bat",
      "presentation": {
        "close": true
      },
      "args": ["run"]
    },
    {
      "label": "地图",
      "command": "${workspaceRoot}/tools/we.bat",
      "presentation": {
        "close": true
      },
      "args": ["open", "-loadfile", "${workspaceRoot}/.w3x"]
    },
    {
      "label": "Obj",
      "command": "${workspaceRoot}/tools/w2l.bat",
      "presentation": {
        "echo": false,
        "panel": "shared",
        "clear": true
      },
      "args": ["obj", "${workspaceRoot}", "${workspaceRoot}/ObjMap.w3x"]
    },
    {
      "label": "Lni",
      "command": "${workspaceRoot}/tools/w2l.bat",
      "hide": true,
      "args": ["lni", "${workspaceRoot}/ObjMap.w3x", "${workspaceRoot}"]
    },
    {
      "label": "Slk",
      "command": "${workspaceRoot}/tools/w2l.bat",
      "args": ["slk", "${workspaceRoot}", "${workspaceRoot}/SlkMap.w3x"]
    },
    {
      "label": "日志",
      "command": "${workspaceRoot}/tools/w2l.bat",
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": true,
        // "close": true,
        "panel": "new"
      },
      "args": ["log"]
    }
  ]
}
